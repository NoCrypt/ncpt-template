{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ncpt-template",
  "version": "0.1.0",
  "identifier": "com.ncpt-template.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "ncpt-template",
        "width": 690,
        "height": 400,
        "decorations": false,
        "visible": false,
        "minWidth": 270,
        "minHeight": 350,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
